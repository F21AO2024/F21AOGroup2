// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model HospitalEmployee {
  id        String    @id @default(uuid()) @map("_id")
  firstName String
  lastName  String
  birthDate DateTime?
  gender    String?
  email     String?   @unique
  adress    String?
  phone     String?
  password  String
  username  String
  role      String
  joinedAt  DateTime  @default(now())
}
